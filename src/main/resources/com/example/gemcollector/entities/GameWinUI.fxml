<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21.0.6"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gemcollector.entities.GameWinController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);">

    <!-- Message principal -->
    <Label text="You Win!"
           layoutX="200" layoutY="100"
           prefWidth="400" alignment="CENTER"
           textAlignment="CENTER"
           style="-fx-font-size: 60px; -fx-text-fill: gold; -fx-font-weight: bold;"/>

    <!-- Image festive -->
    <ImageView fx:id="trophyImage"
               layoutX="250" layoutY="200"
               fitWidth="300" fitHeight="200"
               pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@images/trophy.png"/>
        </image>
    </ImageView>

    <!-- Score final -->
    <Label fx:id="finalScoreLabel"
           text="Score: 0"
           layoutX="250" layoutY="420"
           prefWidth="300" alignment="CENTER"
           textAlignment="CENTER"
           style="-fx-font-size: 30px; -fx-text-fill: white; -fx-font-weight: bold;"/>

    <!-- Boutons -->
    <VBox spacing="20" layoutX="300" layoutY="480" alignment="CENTER">
        <Button text="Play Again" fx:id="playAgainButton"
                prefWidth="200" prefHeight="40"
                style="-fx-background-color: gold; -fx-text-fill: black; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Button text="Quit" fx:id="quitButton"
                prefWidth="200" prefHeight="40"
                style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
    </VBox>
</AnchorPane>
