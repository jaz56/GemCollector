<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: linear-gradient(to bottom, #001f3f, #004b8d);"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gemcollector.entities.GameOverController">

    <!-- GAME OVER Title -->
    <Label fx:id="gameOverLabel"
           text="GAME OVER"
           layoutY="170"
           prefWidth="800"
           alignment="CENTER"
           style="-fx-font-size: 70px; -fx-font-weight: bold; -fx-text-fill: #FF4444;">
        <effect>
            <DropShadow radius="25" color="#AA0000"/>
        </effect>
    </Label>

    <!-- Score Final -->
    <Label fx:id="scoreLabel"
           text="Score : 0"
           layoutY="270"
           prefWidth="800"
           alignment="CENTER"
           style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;"/>

    <!-- Restart Button -->
    <Button fx:id="restartButton"
            text="RESTART"
            layoutY="350"
            prefWidth="200" prefHeight="60"
            layoutX="300"
            style="-fx-background-color: linear-gradient(to bottom, #ff4444, #cc0000);
                   -fx-text-fill: white;
                   -fx-font-size: 24px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 14;
                   -fx-cursor: hand;">
        <effect>
            <DropShadow radius="12" color="#660000"/>
        </effect>
    </Button>

    <!-- Quit Button -->
    <Button fx:id="quitButton"
            text="QUIT"
            layoutY="440"
            prefWidth="200" prefHeight="60"
            layoutX="300"
            style="-fx-background-color: linear-gradient(to bottom, #666666, #333333);
                   -fx-text-fill: white;
                   -fx-font-size: 24px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 14;
                   -fx-cursor: hand;">
        <effect>
            <DropShadow radius="12" color="#222222"/>
        </effect>
    </Button>

</AnchorPane>
