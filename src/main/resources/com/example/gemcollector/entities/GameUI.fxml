<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gemcollector.entities.GameController">

    <!-- Canvas pour dessiner le jeu -->
    <Canvas fx:id="gameCanvas" layoutX="0" layoutY="0" width="800" height="600" />

    <!-- Score -->
    <Label fx:id="scoreLabel" layoutX="20" layoutY="20" text="Score: 0"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 5, 0.5, 0, 2);"/>

    <!-- Vies -->
    <Label fx:id="livesLabel" layoutX="680" layoutY="20" text="Vies: 3"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 5, 0.5, 0, 2);"/>

    <!-- ⭐ NOUVEAU : Bouton PAUSE -->
    <Button fx:id="pauseButton" layoutX="360" layoutY="15" text="⏸️ PAUSE"
            onAction="#handlePauseClick"
            prefWidth="100" prefHeight="40"
            visible="false"
            style="-fx-font-size: 16px; -fx-font-weight: bold;
                   -fx-background-color: rgba(52, 152, 219, 0.8);
                   -fx-text-fill: white;
                   -fx-background-radius: 10;
                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 5, 0.4, 0, 2);"/>

    <!-- Bouton Start -->
    <Button fx:id="startButton" layoutX="350" layoutY="530" text="▶️ START"
            style="-fx-font-size: 18px; -fx-font-weight: bold;
                   -fx-background-color: #27ae60; -fx-text-fill: white;
                   -fx-background-radius: 12;
                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 8, 0.3, 0, 3);"/>

    <!-- Message temporaire -->
    <Label fx:id="messageLabel" layoutX="200" layoutY="50" prefWidth="400" prefHeight="50"
           text=""
           style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #ffd700;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.9), 8, 0.6, 0, 3);" />

    <!-- Instructions (affichées au début) -->
    <Label fx:id="instructionsLabel" layoutX="250" layoutY="480"
           text="Appuyez sur ESC ou ⏸️ pour Pause"
           style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.7);
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 3, 0.5, 0, 1);"
           visible="true"/>

</AnchorPane>