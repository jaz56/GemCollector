<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gemcollector.entities.GameController">

    <!-- Canvas pour dessiner le jeu -->
    <Canvas fx:id="gameCanvas" layoutX="0" layoutY="0" width="800" height="600" />

    <!-- Score et vies -->
    <Label fx:id="scoreLabel" layoutX="20" layoutY="20" text="Score: 0"
           style="-fx-font-size: 20px; -fx-text-fill: white;"/>
    <Label fx:id="livesLabel" layoutX="680" layoutY="20" text="Lives: 3"
           style="-fx-font-size: 20px; -fx-text-fill: white;"/>

    <!-- Bouton Start -->
    <Button fx:id="startButton" layoutX="350" layoutY="530" text="START"
            style="-fx-font-size: 18px; -fx-background-color: #ffd700; -fx-text-fill: black;"/>
    <Label fx:id="messageLabel" layoutX="200" layoutY="50" prefWidth="400" prefHeight="50"
           text="" style="-fx-font-size:30px;-fx-font-weight:bold;-fx-text-fill:red;" />

</AnchorPane>
