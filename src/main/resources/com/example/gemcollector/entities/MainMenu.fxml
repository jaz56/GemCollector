<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gemcollector.entities.MainMenuController"
      alignment="CENTER" spacing="25"
      style="-fx-background-color: linear-gradient(to bottom, #e0f0ff, #ffffff);
             -fx-padding:60;">

    <!-- Titre -->
    <Label text="MAIN MENU"
           style="-fx-font-size:42px; -fx-font-weight:bold; -fx-text-fill:#0059b3;" />

    <!-- IcÃ´ne dÃ©corative -->
    <Label text="ðŸŽ®"
           style="-fx-font-size:60px;" />

    <!-- PLAY -->
    <Button fx:id="playButton" text="PLAY" prefWidth="250" prefHeight="55"
            style="-fx-font-size:18px; -fx-background-radius:12; -fx-background-color:#4da6ff; -fx-text-fill:white;"
            onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit"
            onAction="#handlePlayClick"/>

    <!-- LEVELS -->
    <Button fx:id="levelsButton" text="LEVELS" prefWidth="250" prefHeight="55"
            style="-fx-font-size:18px; -fx-background-radius:12; -fx-background-color:#4da6ff; -fx-text-fill:white;"
            onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit"
            onAction="#handleLevelsClick"/>

    <!-- OPTIONS -->
    <Button fx:id="optionsButton" text="OPTIONS" prefWidth="250" prefHeight="55"
            style="-fx-font-size:18px; -fx-background-radius:12; -fx-background-color:#4da6ff; -fx-text-fill:white;"
            onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit"
            onAction="#handleOptionsClick"/>

    <!-- QUIT -->
    <Button fx:id="quitButton" text="QUIT" prefWidth="250" prefHeight="55"
            style="-fx-font-size:18px; -fx-background-radius:12; -fx-background-color:#ff6666; -fx-text-fill:white;"
            onMouseEntered="#handleMouseEnterQuit" onMouseExited="#handleMouseExitQuit"
            onAction="#handleQuitClick"/>
</VBox>